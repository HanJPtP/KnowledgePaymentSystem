<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.woniu.users.outlet.dao.mysql.mapper.PointRuleMapper">

    <resultMap id="BaseResultMap" type="com.woniu.users.outlet.dao.mysql.po.PointRule">
            <id property="pointRuleId" column="point_rule_id" jdbcType="BIGINT"/>
            <result property="skuId" column="sku_id" jdbcType="BIGINT"/>
            <result property="isDiscount" column="is_discount" jdbcType="INTEGER"/>
            <result property="status" column="status" jdbcType="INTEGER"/>
            <result property="deduction" column="deduction" jdbcType="INTEGER"/>
    </resultMap>

    <sql id="Base_Column_List">
        point_rule_id,sku_id,is_discount,
        status,deduction
    </sql>
    <select id="listPointRule" resultType="com.woniu.users.outlet.dao.mysql.po.PointRule">
        select * from point_rule
        <where>
            <if test="isDiscount != -1">
                and is_discount=#{isDiscount}
            </if>
            <if test="status != -1">
                and status=#{status}
            </if>
        </where>
    </select>
</mapper>
