<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.woniu.outlet.mysql.mapper.GoodsSkuSpuMapper">

    <resultMap id="BaseResultMap" type="com.woniu.outlet.dao.mysql.po.GoodsSkuSpu">
            <result property="skuId" column="sku_id" jdbcType="BIGINT"/>
            <result property="spuId" column="spu_id" jdbcType="BIGINT"/>
    </resultMap>

    <sql id="Base_Column_List">
        sku_id,spu_id
    </sql>

    <insert id="saveGoodsSkuSpuList" parameterType="long">
        insert into goods_sku_spu (sku_id, spu_id) values
           <foreach collection="goodsSkuIdList" item="id" separator=",">
               (#{id}, (select id from goods_spu where spg_id = #{spgid}))
           </foreach>
    </insert>
</mapper>
